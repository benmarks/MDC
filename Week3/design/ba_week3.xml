<layout version="0.1.0">
  <default>
		<reference name="top.links">
			<action method="removeLinkByUrl"><url helper="ba_week3/url/getCheckoutUrl"></url></action>
		</reference>
    <reference name="left">
      <block type="core/template" template="ba_week3/currentDate.phtml"/>
    </reference>
  </default>
	
	<customer_account_index>
		<reference name="root">
				<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
	</customer_account_index>
	
	<custom_handle>
		<block type="core/template" name="root" template="ba_week3/currentDate.phtml"/>
	</custom_handle>
	
	<ba_week3_index_index>
		<update handle="custom_handle" />
	</ba_week3_index_index>
</layout>